
= bootstrap_form_for stay do |f|
  = f.hidden_field :country_id
  = f.static_control :country do 
    = image_tag(f.object.country.flag, class: :flag) 
  = f.date_field :arrival
  = f.text_field :name
  = f.number_field :days, step: 1, min: 1
  = f.number_field :amount, step: 1, min: 0, prepend: "$", append: ",00"
  = f.submit